@model IEnumerable<CoffeeDemo.Models.Contact>
@using CoffeeDemo.Utils.Enums;
@using CoffeeDemo.Utils.Extensions;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    @*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@
    <div class="well well-lg well-bg-green">
        @*<div class="panel panel-default">
            <div class="panel-heading">Contacts</div>
            <div class="panel-body panel-body-50">Below are a list of the Contacts for type <strong>All Contacts</strong></div>*@

        <table class="table table-striped table-head-black">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Firstname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContactTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TwitterHandle)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GenderTypeId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Firstname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayEnumFor(modelItem => item.ContactTypeId, typeof(GeneralEnums.ContactType))
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TwitterHandle)
                    </td>
                    <td>
                        @Html.DisplayEnumFor(modelItem => item.GenderTypeId, typeof(GeneralEnums.GenderType))
                    </td>
                    <td>
                        @Html.DisplayYesNoFromBool(item.IsActive)
                    </td>
                </tr>
            }

        </table>

        @*</div>*@
    </div>

</body>
</html>
