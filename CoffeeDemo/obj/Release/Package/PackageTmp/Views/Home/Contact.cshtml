@{
    ViewBag.Title = "Contact";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<address>
    One Microsoft Way<br />
    Redmond, WA 98052-6399<br />
    <abbr title="Phone">P:</abbr>
    425.555.0100
</address>

<address>
    <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a><br />
    <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
</address>

<div id="form-section">
    @*@using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "form-section" }))
    {*@
    <form id="contact-form" method="post">
        <p><textarea name="message" id="message" maxlength="150" data-bind="value:msg, valueUpdate:'input'"></textarea></p>
        <p><input type="submit" value="Send Message" class="btn btn-danger" /></p>
        <p><span data-bind="text:charactersRemaining" class="font-20"></span> characters remaining</p>
    </form>

    @*}*@
</div>

@section scripts {
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/knockout-3.3.0.js"></script>

    <script>
        function ContactViewModel() {
            var self = this;
            self.msg = ko.observable('');
            self.charactersRemaining = ko.computed(function () {
                return 150 - self.msg().length;
            })
        }
        ko.applyBindings(new ContactViewModel());
    </script>
}

